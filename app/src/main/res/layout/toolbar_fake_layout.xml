<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/toolbar_lower"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="end">

        <ImageView
            android:padding="13dp"
            android:background="@drawable/bg_attachments"
            android:id="@+id/take_audio"
            android:src="@drawable/mic_white"
            android:adjustViewBounds="true"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent" />

        <ImageView
            android:padding="13dp"
            android:background="@drawable/bg_attachments"
            android:id="@+id/take_photo"
            android:src="@drawable/photo_camera"
            android:adjustViewBounds="true"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent" />

        <ImageView
            android:padding="13dp"
            android:background="@drawable/bg_attachments"
            android:id="@+id/take_video"
            android:src="@drawable/video_camera"
            android:adjustViewBounds="true"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent" />

        <ImageView
            android:background="@drawable/bg_attachments"
            android:padding="13dp"
            android:id="@+id/open_gallery"
            android:src="@drawable/photo_library"
            android:adjustViewBounds="true"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/toolbar_lower_palette"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="end">

        <ImageView
            android:id="@+id/change_color"
            android:padding="13dp"
            android:background="@drawable/bg_attachments"
            android:src="@drawable/palette"
            android:adjustViewBounds="true"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/change_size"
            android:padding="13dp"
            android:background="@drawable/bg_attachments"
            android:src="@drawable/format_size"
            android:adjustViewBounds="true"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/change_blink"
            android:padding="13dp"
            android:background="@drawable/bg_attachments"
            android:src="@drawable/texture"
            android:adjustViewBounds="true"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/toolbar_upper"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <FrameLayout
                android:background="@drawable/bg_attachments"
                android:id="@+id/back_to_contacts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/arrow_back_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </FrameLayout>

            <TextView
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:text="Contact"
                android:maxLines="1"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout">

            <com.incode_it.spychat.TextViewDigital
                android:background="@drawable/bg_attachments"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                custom:typefaceAsset="fonts/digital.ttf"
                android:text="19:00:25"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:id="@+id/global_timer_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <FrameLayout
                android:background="@drawable/bg_attachments"
                android:id="@+id/attachments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/attachments"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="wrap_content" />

            </FrameLayout>

            <ImageView
                android:id="@+id/palette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:src="@drawable/palette_advanced"/>

        </LinearLayout>





    </RelativeLayout>

</FrameLayout>
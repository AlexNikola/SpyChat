<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".contacts.ActivityMain"
    android:background="#2e2e2e">

    <FrameLayout
        android:id="@+id/fragment_chat_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>

    <LinearLayout
        android:id="@+id/attachments_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        android:gravity="end">

        <ImageView
            android:id="@+id/take_photo"
            android:layout_margin="15dp"
            android:src="@drawable/photo_camera"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/take_video"
            android:layout_margin="15dp"
            android:src="@drawable/video_camera"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/open_gallery"
            android:layout_margin="15dp"
            android:src="@drawable/photo_library"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/toolbar_fake"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <FrameLayout
            android:id="@+id/back_to_contacts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/arrow_back_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>


        <TextView
            android:layout_gravity="center_vertical"
            android:text="Contact"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/global_timer_text"
            android:layout_toRightOf="@+id/back_to_contacts"
            android:layout_toEndOf="@+id/back_to_contacts" />

        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:text="Time"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:id="@+id/global_timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/attachments"
            android:layout_toStartOf="@+id/attachments" />

        <FrameLayout
            android:id="@+id/attachments"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/attachments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_check_email"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.incode_it.spychat.AddEmailFragment"
    tools:showIn="@layout/activity_add_email">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_bg_edit_text_height"
            android:layout_marginBottom="@dimen/auth_bg_edit_text_margin_bottom"/>

        <android.support.design.widget.TextInputLayout
            android:hint="Phone number"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/auth_edit_text_height"
                android:textCursorDrawable="@drawable/color_cursor_auth"
                android:padding="@dimen/auth_edit_text_padding"
                android:inputType="phone"
                android:ems="10"/>

        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:id="@+id/clear_phone"
            android:layout_width="@dimen/auth_bg_edit_text_height"
            android:layout_height="@dimen/auth_bg_edit_text_height"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/auth_bg_edit_text_margin_bottom">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clear_24dp"/>

        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/error_phone"
        android:textColor="@color/errorColor"
        android:textSize="@dimen/auth_error_text_size"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_error_text_height"/>







    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_bg_edit_text_height"
            android:layout_marginBottom="@dimen/auth_bg_edit_text_margin_bottom"/>

        <android.support.design.widget.TextInputLayout
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/auth_edit_text_height"
                android:textCursorDrawable="@drawable/color_cursor_auth"
                android:padding="@dimen/auth_edit_text_padding"
                android:inputType="textPassword"
                android:ems="10"/>

        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:id="@+id/clear_password"
            android:layout_width="@dimen/auth_bg_edit_text_height"
            android:layout_height="@dimen/auth_bg_edit_text_height"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/auth_bg_edit_text_margin_bottom">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clear_24dp"/>

        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/error_password"
        android:textColor="@color/errorColor"
        android:textSize="@dimen/auth_error_text_size"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_error_text_height"/>






    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_bg_edit_text_height"
            android:layout_marginBottom="@dimen/auth_bg_edit_text_margin_bottom"/>

        <android.support.design.widget.TextInputLayout
            android:hint="New email"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/auth_edit_text_height"
                android:textCursorDrawable="@drawable/color_cursor_auth"
                android:padding="@dimen/auth_edit_text_padding"
                android:inputType="textEmailAddress"
                android:ems="10"/>

        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:id="@+id/clear_email"
            android:layout_width="@dimen/auth_bg_edit_text_height"
            android:layout_height="@dimen/auth_bg_edit_text_height"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/auth_bg_edit_text_margin_bottom">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clear_24dp"/>

        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/error_email"
        android:textColor="@color/errorColor"
        android:textSize="@dimen/auth_error_text_size"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_error_text_height"/>





    <FrameLayout
        android:id="@+id/add_email_button"
        android:background="@drawable/bg_auth_btn_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_btn_height"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Add email"
            android:id="@+id/add_email_button_text"/>

        <ProgressBar
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center" />
    </FrameLayout>
</LinearLayout>

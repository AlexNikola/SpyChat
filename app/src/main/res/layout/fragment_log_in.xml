<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryAuth"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/auth_edit_text_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="@drawable/bg_phone_input"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/auth_bg_edit_text_height"
                    android:layout_marginBottom="@dimen/auth_bg_edit_text_margin_bottom"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout_phone"
                    android:textColorHint="@color/colorHintAuth"
                    android:hint="@string/phone_or_email_hint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputEditText
                        android:textSize="20sp"
                        android:id="@+id/edit_text_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/auth_edit_text_height"
                        android:background="#00000000"
                        android:textCursorDrawable="@drawable/color_cursor_auth"
                        android:paddingLeft="@dimen/auth_edit_text_padding"
                        android:paddingStart="@dimen/auth_edit_text_padding"
                        android:inputType="textEmailAddress"
                        android:ems="10"/>

                </android.support.design.widget.TextInputLayout>

                <FrameLayout
                    android:id="@+id/edit_text_clear_phone"
                    android:layout_width="@dimen/auth_bg_edit_text_height"
                    android:layout_height="@dimen/auth_bg_edit_text_height"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="@dimen/auth_bg_edit_text_margin_bottom">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clear_24dp"/>

                </FrameLayout>

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/error_phone"
            android:textColor="@color/errorColor"
            android:textSize="@dimen/auth_error_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_error_text_height" />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:background="@drawable/bg_phone_input"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/auth_bg_edit_text_height"
                android:layout_marginBottom="@dimen/auth_bg_edit_text_margin_bottom"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_pass"
                android:textColorHint="@color/colorHintAuth"
                android:hint="@string/pass_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_text_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/auth_edit_text_height"
                    android:background="#00000000"
                    android:textSize="20sp"
                    android:textCursorDrawable="@drawable/color_cursor_auth"
                    android:padding="@dimen/auth_edit_text_padding"
                    android:inputType="textPassword"
                    android:ems="10"/>

            </android.support.design.widget.TextInputLayout>

            <FrameLayout
                android:id="@+id/edit_text_clear_pass"
                android:layout_width="@dimen/auth_bg_edit_text_height"
                android:layout_height="@dimen/auth_bg_edit_text_height"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/auth_bg_edit_text_margin_bottom">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clear_24dp"/>

            </FrameLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/error_pass"
            android:textColor="@color/errorColor"
            android:textSize="@dimen/auth_error_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_error_text_height" />

        <FrameLayout
            android:id="@+id/log_in_button"
            android:background="@drawable/bg_auth_btn_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_btn_height"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/log_in"
                android:id="@+id/log_in_button_text"/>

            <ProgressBar
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:id="@+id/progressBar"
                android:layout_gravity="center" />

        </FrameLayout>

        <TextView
            android:id="@+id/forgot"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Forgot password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/code_login"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:text="Log in by code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>



</ScrollView>



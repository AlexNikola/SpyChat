<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5f0ff"
    tools:context="com.incode_it.spychat.effects.VisualsFragment">

    <com.incode_it.spychat.effects.VisualsView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:background="#455455"
            android:layout_margin="100dp"
            android:id="@+id/emiter1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <View
            android:background="#455455"
            android:layout_gravity="end"
            android:layout_margin="100dp"
            android:id="@+id/emiter3"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <View
            android:background="#455455"
            android:layout_gravity="bottom"
            android:layout_margin="100dp"
            android:id="@+id/emiter4"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <View
            android:layout_gravity="bottom|end"
            android:layout_margin="100dp"
            android:id="@+id/emiter2"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    </com.incode_it.spychat.effects.VisualsView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal">

        <LinearLayout
            android:gravity="end"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/balloons"
                android:text="Balloons"
                android:textSize="16sp"
                android:padding="10dp"
                android:background="@drawable/button_dark_selector"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/firework"
                android:text="Fireworks"
                android:textSize="16sp"
                android:padding="10dp"
                android:background="@drawable/button_dark_selector"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/love"
                android:text="Love"
                android:textSize="16sp"
                android:padding="10dp"
                android:background="@drawable/button_dark_selector"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/party"
                android:text="Party"
                android:textSize="16sp"
                android:padding="10dp"
                android:background="@drawable/button_dark_selector"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/none"
                android:text="None"
                android:textSize="16sp"
                android:padding="10dp"
                android:background="@drawable/button_dark_selector"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AuthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryAuth</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAuth</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorControlNormal">@color/colorPrimaryAuth</item>
        <item name="colorControlActivated">@color/colorPrimaryAuth</item>-->
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff4343</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--<style name="hint_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#84bbff</item>
        <item name="android:textSize">12sp</item>
    </style>-->

</resources>
